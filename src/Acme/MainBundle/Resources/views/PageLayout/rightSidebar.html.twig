                <h6>
                    <a href="{{ path('client_post_show',{'category_url':post.category.url, 'post_url':post.url }) }}">{{ post.name }}</a>
                </h6>
                <em>{{ post.getCreatedAtByFormat('d F / Y') }}</em>
            </li>
        {% endfor %}
