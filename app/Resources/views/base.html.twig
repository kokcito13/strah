    ga('create', 'UA-11535685-15', 'auto');
    ga('send', 'pageview');

</script>
<!-- Color Bars (above header)-->
<div class="color-bar-1"></div>
<div class="color-bar-2 color-bg"></div>

<div class="container">
    <div class="row header"><!-- Begin Header -->
        <!-- Logo
        ================================================== -->
        <div class="span3 logo">
            {% if app.request.get('_route') == 'page_home' %}
                <img src="{{ asset('bundles/acmemain/images/logoD.png') }}" alt="" style="width: 255px;"/>
            {% else %}
                <a href="{{ path('page_home', {city_url: currentCity().url}) }}">
                    <img src="{{ asset('bundles/acmemain/images/logoD.png') }}" alt="" style="width: 255px;"/>
                </a>
            {% endif %}
            {#<h5>Все о страховке</h5>#}
        </div>
        <!-- Main Navigation
        ================================================== -->
        {{ render(controller('AcmeMainBundle:PageLayout:navigate', {
            'main': mainCategory,
            'route_name':  app.request.get('_route'),
            'route_attributes': app.request.attributes.get('_route_params')
        })) }}
    </div><!-- End Header -->
    {% block body %}{% endblock %}
</div> <!-- End Container -->

<!-- Footer Area
    ================================================== -->
{{ render(controller('AcmeMainBundle:PageLayout:footer', {
    'main': mainCategory,
    'route_name':  app.request.get('_route'),
    'post': currentPost,
    'company': currentCompany,
})) }}
